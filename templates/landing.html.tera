        <p><span class="type">{{ text.text_type }}</span>{{ text.lead_paragraph }}</p>
        <p class="news-meta-data">{{ text.creator.display_name }}, {{ text.created_at | date(format="%R")  }}</p>
    </a>
    {% endfor %}
